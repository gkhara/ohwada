<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
	xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

	<LinearLayout
		android:orientation="vertical"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:layout_margin="4dp"
    	android:layout_gravity="center"
    	android:gravity="center" >
   			
	<TableLayout 
		android:layout_width="wrap_content"
		android:layout_height="wrap_content" >
    
		<TableRow>
			<ImageView
				android:id="@+id/ImageView_two_left_forward"
            	android:layout_width="90dp"
    			android:layout_height="90dp"
				android:layout_column="0"
				android:src="@drawable/robot_forward" />

			<View
				android:layout_width="30dp"
				android:layout_height="1dp"
				android:layout_column="1" />
								
			<ImageView
				android:id="@+id/ImageView_two_right_forward"
            	android:layout_width="90dp"
    			android:layout_height="90dp"
				android:layout_column="2"
				android:src="@drawable/robot_forward" />
    	</TableRow>

		<TableRow
			android:id="@+id/TableRow_two_forward" >

			<TextView
				android:id="@+id/TextView_two_left_forward"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_column="0" />

			<View
				android:layout_width="30dp"
				android:layout_height="1dp"
				android:layout_column="1" />
								
			<TextView
				android:id="@+id/TextView_two_right_forward"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_column="2" />
		</TableRow>
    			    
		<TableRow>
			<ImageView
				android:id="@+id/ImageView_two_left_back"
            	android:layout_width="90dp"
    			android:layout_height="90dp"
				android:layout_column="0"
				android:src="@drawable/robot_back" />

			<View
				android:layout_width="30dp"
				android:layout_height="1dp"
				android:layout_column="1" />
									
			<ImageView
				android:id="@+id/ImageView_two_right_back"
            	android:layout_width="90dp"
    			android:layout_height="90dp"
				android:layout_column="2"
				android:src="@drawable/robot_back" />
		</TableRow>

		<TableRow
			android:id="@+id/TableRow_two_back" >

			<TextView
				android:id="@+id/TextView_two_left_back"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_column="0" />

			<View
				android:layout_width="30dp"
				android:layout_height="1dp"
				android:layout_column="1" />
				
			<TextView
				android:id="@+id/TextView_two_right_back"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_column="2" />
		</TableRow>

	</TableLayout>
	</LinearLayout>
	
	<LinearLayout 
		android:id="@+id/LinearLayout_two_button"
    	android:orientation="horizontal"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
   		android:layout_margin="4dp" >

		<Button 
			android:id="@+id/Button_two_save"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:text="@string/button_save" />

		<Button 
			android:id="@+id/Button_two_cancel"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:text="@string/button_cancel" />

	</LinearLayout>
</LinearLayout>

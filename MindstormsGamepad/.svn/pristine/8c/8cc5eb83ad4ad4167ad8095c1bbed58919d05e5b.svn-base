<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
	xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

	<LinearLayout
	    android:orientation="vertical"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:layout_margin="4dp"
    	android:layout_gravity="center"
    	android:gravity="center" >
    		
	<TableLayout 
    	android:layout_width="wrap_content"
		android:layout_height="wrap_content" >

    	<TableRow>
        	<ImageView
				android:id="@+id/ImageView_nine_forward_left"
            	android:layout_width="90dp"
    			android:layout_height="90dp"
				android:layout_column="0"
				android:src="@drawable/robot_forward_left" />

			<ImageView
				android:id="@+id/ImageView_nine_forward"
           		android:layout_width="90dp"
    			android:layout_height="90dp"
				android:layout_column="1"
				android:src="@drawable/robot_forward" />

			<ImageView
				android:id="@+id/ImageView_nine_forward_right"
            	android:layout_width="90dp"
    			android:layout_height="90dp"
				android:layout_column="2"
				android:src="@drawable/robot_forward_right" />
    	</TableRow>

		<TableRow
			android:id="@+id/TableRow_nine_forward" >

			<View
				android:layout_width="1dp"
				android:layout_height="1dp"
				android:layout_column="0" />
	
			<TextView
				android:id="@+id/TextView_nine_forward"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_column="1" />

			<View
				android:layout_width="1dp"
				android:layout_height="1dp"
				android:layout_column="2" />
		</TableRow>

		<TableRow>
        	<ImageView
				android:id="@+id/ImageView_nine_left"
            	android:layout_width="90dp"
    			android:layout_height="90dp"
				android:layout_column="0"
				android:src="@drawable/robot_turn_left" />

			<ImageView
				android:id="@+id/ImageView_nine_center"
            	android:layout_width="90dp"
    			android:layout_height="90dp"
				android:layout_column="1"
				android:src="@drawable/robot_stop" />

			<ImageView
				android:id="@+id/ImageView_nine_right"
            	android:layout_width="90dp"
    			android:layout_height="90dp"
				android:layout_column="2"
				android:src="@drawable/robot_turn_right" />
    	</TableRow>

		<TableRow
			android:id="@+id/TableRow_nine_center" >

			<TextView
				android:id="@+id/TextView_nine_left"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_column="0" />

			<View
				android:layout_width="1dp"
				android:layout_height="1dp"
				android:layout_column="1" />
				
			<View
				android:layout_width="1dp"
				android:layout_height="1dp"
				android:layout_column="2" />
		</TableRow>
		
	    <TableRow>
	        <ImageView
				android:id="@+id/ImageView_nine_back_left"
            	android:layout_width="90dp"
    			android:layout_height="90dp"
				android:layout_column="0"
				android:src="@drawable/robot_back_left" />
		
			<ImageView
				android:id="@+id/ImageView_nine_back"
            	android:layout_width="90dp"
    			android:layout_height="90dp"
				android:layout_column="1"
				android:src="@drawable/robot_back" />
		
			<ImageView
				android:id="@+id/ImageView_nine_back_right"
            	android:layout_width="90dp"
    			android:layout_height="90dp"
				android:layout_column="2"
				android:src="@drawable/robot_back_right" />
    	
    	</TableRow>
	</TableLayout>
	</LinearLayout>
		
	<LinearLayout 
		android:id="@+id/LinearLayout_nine_button"
    	android:orientation="horizontal"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
   		android:layout_margin="4dp" >

		<Button 
			android:id="@+id/Button_nine_save"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:text="@string/button_save" />

		<Button 
			android:id="@+id/Button_nine_cancel"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:text="@string/button_cancel" />

	</LinearLayout>			
</LinearLayout>
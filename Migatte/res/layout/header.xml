<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:orientation="vertical">
		 		
	<TextView android:id="@+id/header_textView_feeling"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="3dp"
		android:layout_marginBottom="3dp"
		android:gravity="center"
		android:textSize="20sp"
		android:textStyle="bold"
		android:textColor="#333333"/>

	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="130dp"
		android:orientation="horizontal" >

		<ImageView android:id="@+id/header_imageView_image"
			android:layout_width="120dp"
			android:layout_height="120dp"
			android:layout_weight="1" />

		<ImageView android:id="@+id/header_imageView_logo"
			android:layout_width="90dp"
			android:layout_height="35dp"
			android:src="@drawable/gnavi_logo"/>

	</LinearLayout>

	<TextView android:id="@+id/header_textView_title"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:gravity="center"
		android:textSize="20sp"
		android:textColor="#333333"/>

	<TextView android:id="@+id/header_textView_detail"
		android:layout_width="fill_parent"
		android:layout_height="120dp"
		android:textColor="#333333"/>

	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="3dp"
		android:layout_marginBottom="3dp"
		android:layout_marginRight="3dp"
		android:layout_marginLeft="3dp"
		android:gravity="center"
		android:orientation="horizontal">

		<ImageView android:id="@+id/header_imageView_back"
			android:layout_width="100dp"
			android:layout_height="40dp"
			android:src="@drawable/btn_back"/>

		<ImageView android:id="@+id/header_imageView_twitter"
			android:layout_width="100dp"
			android:layout_height="40dp"
			android:layout_marginLeft="3dp"
			android:src="@drawable/btn_twitter"/>

		<ImageView android:id="@+id/header_imageView_map"
			android:layout_width="100dp"
			android:layout_height="40dp"
			android:layout_marginLeft="3dp"
			android:src="@drawable/btn_map"/>	

	</LinearLayout>

</LinearLayout>

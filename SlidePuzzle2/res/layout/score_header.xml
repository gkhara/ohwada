<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
	xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" 
    android:orientation="vertical"
    >
    
	<LinearLayout 
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:orientation="horizontal"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	>

		<EditText
			android:id="@+id/header_edit_start"
			android:hint="@string/header_edit_start"
			android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:layout_weight="1"
    		android:inputType="number"
			/>
		
		<Button
			android:id="@+id/header_button_start"
			android:layout_width="wrap_content"
   	 		android:layout_height="wrap_content"
			android:text="@string/header_button_start"
			/>

		<Button
			android:id="@+id/header_button_mail"
			android:layout_width="wrap_content"
   	 		android:layout_height="wrap_content"
			android:text="@string/header_button_mail"
			/>
			
	</LinearLayout>

	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:orientation="horizontal"
		>
	
		<TextView android:id="@+id/header_text_game"
			android:layout_width="50dp"
			android:layout_height="wrap_content"
			android:text="@string/header_text_game"
			/>

		<TextView android:id="@+id/row_text_move"
			android:layout_width="50dp"
			android:layout_height="wrap_content"
			android:text="@string/header_text_move"
			/>
			
		<TextView android:id="@+id/header_text_time"
			android:layout_width="50dp"
			android:layout_height="wrap_content"
			android:text="@string/header_text_time"
			/>
							
		<TextView android:id="@+id/header_text_date"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/header_text_date"
			/>
			
	</LinearLayout>

</LinearLayout>	
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="4dp" >
    
   <Button
		android:id="@+id/Button_refresh"
		android:layout_width="fill_parent"
        android:layout_height="wrap_content" 
        android:text="@string/button_refresh" />

   	<TextView
		android:id="@+id/TextView_time"
		android:layout_width="fill_parent"
        android:layout_height="wrap_content"  />
        
   	<TextView
		android:layout_width="fill_parent"
        android:layout_height="wrap_content" 
        android:text="@string/label_orbit" />

	<LinearLayout 
    	android:orientation="horizontal"
		android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

   		<Button
			android:id="@+id/Button_left"
			android:layout_width="wrap_content"
        	android:layout_height="fill_parent" 
        	android:text="@string/button_left" />
   		
		<jp.ohwada.android.satellitetracking1.SatelliteGLSurfaceView
			android:id="@+id/SurfaceView"
			android:layout_width="0dp"
        	android:layout_height="wrap_content"
       		android:layout_weight="1" />

   		<Button
			android:id="@+id/Button_right"
			android:layout_width="wrap_content"
        	android:layout_height="fill_parent" 
        	android:text="@string/button_right" />

	</LinearLayout> 
	
   	<TextView
		android:layout_width="fill_parent"
        android:layout_height="wrap_content" 
        android:text="@string/label_tarcking" />

   	<TextView
		android:id="@+id/TextView_current"
		android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
        
	<jp.ohwada.android.satellitetracking1.SatelliteView
		android:id="@+id/SatelliteView"
		android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/linearlayout_main"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" 
    android:orientation="horizontal"
    >

<!-- measure px -->
<LinearLayout 
    android:orientation="vertical" 
    android:layout_width="10dp"
    android:layout_height="fill_parent"
    >

	<include layout="@layout/borber_vertical_px_10" /> 
	<include layout="@layout/borber_vertical_px_10" />
    <include layout="@layout/borber_vertical_px_10" />
	<include layout="@layout/borber_vertical_px_10" />
    <include layout="@layout/borber_vertical_px_10" />
	<include layout="@layout/borber_vertical_px_10" />
    <include layout="@layout/borber_vertical_px_10" />
	<include layout="@layout/borber_vertical_px_10" />
				      
</LinearLayout>

<!-- measure dp -->
<LinearLayout 
    android:orientation="vertical" 
    android:layout_width="10dp"
    android:layout_height="fill_parent"
    >

	<include layout="@layout/borber_vertical_dp_10" /> 
	<include layout="@layout/borber_vertical_dp_10" />
    <include layout="@layout/borber_vertical_dp_10" />
	<include layout="@layout/borber_vertical_dp_10" />
    <include layout="@layout/borber_vertical_dp_10" />
	<include layout="@layout/borber_vertical_dp_10" />
    <include layout="@layout/borber_vertical_dp_10" />
	<include layout="@layout/borber_vertical_dp_10" />
				      
</LinearLayout>

<!-- right -->
<LinearLayout 
    android:orientation="vertical" 
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >

<!-- display info -->
	<TextView
	    android:id="@+id/textview_display"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="10dp"
		android:layout_marginLeft="10dp"
		/>

	<TextView
	    android:id="@+id/textview_window"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginLeft="10dp"
		/>
					    
<!-- Sample 1 -->
	<LinearLayout 
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content" 
    	android:orientation="horizontal"
    	>
    
    	<ImageView
    		android:id="@+id/imageview_sample_1"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
			android:layout_margin="5dp"
			android:background="@drawable/image_border"
 			/>
        
    	<TextView
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_marginTop="10dp"
        	android:text="@string/title_1"
			/>

	</LinearLayout>

<!-- Sample 2 -->
	<LinearLayout 
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content" 
    	android:orientation="horizontal"
    	>
    
    	<ImageView
    		android:id="@+id/imageview_sample_2"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
			android:layout_margin="5dp"
			android:background="@drawable/image_border"
 			/>

<!-- Sample 2 info -->
		<LinearLayout 
    		android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:orientation="vertical" 
    		>
    		       
    		<TextView
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:layout_marginTop="10dp"
        		android:text="@string/title_2"
				/>

    		<TextView
    			android:id="@+id/textview_info_2"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
				/>
				
		</LinearLayout>
	</LinearLayout>

<!-- Sample 3 -->
	<LinearLayout 
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content" 
    	android:orientation="horizontal"
    	>
    
    	<ImageView
    		android:id="@+id/imageview_sample_3"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
			android:layout_margin="5dp"
			android:background="@drawable/image_border"
 			/>

<!-- Sample 3 info -->
		<LinearLayout 
    		android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:orientation="vertical" 
    		>
    		       
    		<TextView
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:layout_marginTop="10dp"
        		android:text="@string/title_3"
				/>

    		<TextView
    			android:id="@+id/textview_info_3"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
				/>
				
		</LinearLayout>
	</LinearLayout>

<!-- Sample 4 -->
	<LinearLayout 
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content" 
    	android:orientation="horizontal"
    	>
    
    	<ImageView
    		android:id="@+id/imageview_sample_4"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
			android:layout_margin="5dp"
			android:background="@drawable/image_border"
 			/>
        
    	<TextView
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_marginTop="10dp"
        	android:text="@string/title_4"
			/>

	</LinearLayout>
	
</LinearLayout>
<!-- right end -->
	
</LinearLayout>
